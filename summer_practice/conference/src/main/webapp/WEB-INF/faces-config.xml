<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
        version="2.2">
        <navigation-rule>
                <from-view-id>/pages/protected/user/main.xhtml</from-view-id>
                <navigation-case>
                        <from-action>#{userBean.logout}</from-action>
                        <from-outcome>success</from-outcome>
                        <to-view-id>/pages/protected/user/main.xhtml</to-view-id>
                        <redirect/>
                </navigation-case>
        </navigation-rule>
        <navigation-rule>
                <from-view-id>/pages/public/signup.xhtml</from-view-id>
                <navigation-case>
                        <from-action>#{signUpBean.complite}</from-action>
                        <from-outcome>success</from-outcome>
                        <to-view-id>/pages/protected/user/main.xhtml</to-view-id>
                        <redirect/>
                </navigation-case>
        </navigation-rule>
        <navigation-rule>
                <from-view-id>/pages/public/recpass.xhtml</from-view-id>
                <navigation-case>
                        <from-action>#{userBean.passwordRecovery}</from-action>
                        <from-outcome>success</from-outcome>
                        <to-view-id>/pages/protected/user/main.xhtml</to-view-id>
                        <redirect/>
                </navigation-case>
        </navigation-rule>
        <navigation-rule>
                <from-view-id>/pages/public/conferences.xhtml</from-view-id>
                <navigation-case>
                        <from-action>#{conferenceBean.Detail}</from-action>
                        <from-outcome>success</from-outcome>
                        <to-view-id>/pages/public/conference.xhtml</to-view-id>
                        <redirect/>
                </navigation-case>
        </navigation-rule>
</faces-config>